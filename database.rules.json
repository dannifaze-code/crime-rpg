{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "leaderboard": {
      ".read": true,
      "$accountId": {
        ".write": "auth != null && (
          !data.exists() ||
          data.child('accountId').val() === auth.uid
        )"
      }
    },
    "global_chat": {
      ".read": true,
      ".write": "auth != null"
    },
    "private_chats": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
